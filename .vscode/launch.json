    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run dev",
            "name": "Vite",
            "request": "launch",
            "type": "node-terminal",
            "presentation": {
                "hidden": true,
            }
        },
        {
            "name": "Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}",
            "presentation": {
                "hidden": true,
            }
        },
    ],
    "compounds": [
        {
            "name": "Open App",
            "configurations": ["Vite", "Chrome"]
        }
    ]
}